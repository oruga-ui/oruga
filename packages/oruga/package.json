{
  "name": "@oruga-ui/oruga-next",
  "version": "0.12.4",
  "homepage": "https://oruga-ui.com",
  "description": "UI components for Vue.js and CSS framework agnostic",
  "author": "Walter Tommasi <tommsi20@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "unpkg": "dist/oruga.js",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./*": "./*",
    "./volar": {
      "types": "./volar.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "nuxt",
    "types/*.d.ts",
    "volar.d.ts",
    "README.md"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oruga-ui/oruga.git"
  },
  "bugs": {
    "url": "https://github.com/oruga-ui/oruga/issues"
  },
  "keywords": [
    "oruga",
    "vue",
    "vuejs",
    "components",
    "ux",
    "ui",
    "css",
    "agnostic",
    "framework"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build && vite build --mode minify",
    "build:watch": "vite build --mode minify --watch",
    "build:lib": "rimraf dist && npm run test:ts && npm run build",
    "build:lib:watch": "(npm link || true) && npm run build:watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ts": "vue-tsc --noEmit --skipLibCheck --project tsconfig.app.json",
    "prepublishOnly": "cp ../../README.md . && cp ../../LICENSE ."
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "vue-component-type-helpers": "^3.1.8"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@rollup/plugin-babel": "6.1.0",
    "@tsconfig/node24": "^24.0.3",
    "@types/jest-axe": "^3.5.9",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "core-js": "3.45.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.3.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "vitest-browser-vue": "^2.0.1",
    "vue": "^3.5.25",
    "vue-component-meta": "^3.1.8",
    "vue-tsc": "^3.1.8"
  }
}
