{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["node", "vite/client", "./volar.d.ts"]

  },
  "vueCompilerOptions": {
    "strictTemplates": true
  },
  "include": [
    ".vitepress/**/*",
    "docgen.config.ts",
    "volar.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}