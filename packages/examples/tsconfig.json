{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    // @vue/tsconfig comes with noUncheckedIndexedAccess enabled
    "noUncheckedIndexedAccess": false,

    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["../oruga/src/*"],
      "@oruga-ui/oruga-next": ["../oruga/src/index"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "../oruga/src/**/*.ts",
    "../oruga/src/**/*.vue",
    "vite.config.*"
  ],
  "exclude": [
    "../oruga/src/__tests__/**",
    "../oruga/src/**/*.test.ts",
    "node_modules",
    "dist"
  ]
}
