{
  "name": "@oruga-ui/docs-next",
  "version": "0.9.2",
  "homepage": "https://oruga-ui.com",
  "description": "UI components for Vue.js and CSS framework agnostic",
  "author": "Walter Tommasi <tommsi20@gmail.com>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vitepress dev",
    "build": "vitepress build",
    "docs:dev": "concurrently \"npm run docs:gen:watch\" \"npm run dev\"",
    "docs:build": "npm run build",
    "docs:gen": "tsx src/docgen.ts",
    "docs:gen:watch": "tsx src/docgen.ts --watch",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "update": "ncu -u"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@highlightjs/vue-plugin": "2.1.2",
    "@oruga-ui/theme-bootstrap": "0.7.2",
    "@oruga-ui/theme-bulma": "0.5.2",
    "@oruga-ui/theme-oruga": "0.5.0",
    "highlight.js": "11.11.0",
    "markdown-it": "^14.1.0",
    "markdown-it-highlightjs": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.4",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "9.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-vue": "^9.32.0",
    "npm-check-updates": "^17.1.11",
    "prettier": "^3.4.2",
    "sass": "^1.83.0",
    "tsx": "^4.19.2",
    "typescript": "5.6.3",
    "vitepress": "^1.5.0",
    "vue": "^3.5.13",
    "vue-component-meta": "^2.1.10",
    "vue-docgen-cli": "4.79.0",
    "vue-tsc": "^2.1.10"
  }
}
