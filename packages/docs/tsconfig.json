{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["node", "vite/client", "vitepress/client"],
    "paths": {
      "@docs": ["./src"],
      "@oruga-ui/oruga-next": ["../oruga/src"],
    },
  },
  "include": [
    ".vitepress/**/*",
    "src/**/*",
    "src/**/*.ts", 
  ],
  "exclude": [
    "node_modules"
  ]
}